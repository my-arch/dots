#!/bin/bash

FILE=~/.config/i3/rofi/scripts/menu-script/todolist.txt

if [[ -z "$@" ]]; then
    cat $FILE
else
    if (grep -Fx "$@" $FILE) &>/dev/null; then
        POS=$(grep -n -Fx "$@" $FILE | awk 'BEGIN {FS=":"}{print $1}' | \
            head -n 1)
        sed -i $POS'd' $FILE
        cat ""
        cat $FILE
        #killall rofi
        #rofi -theme ~/.config/i3/rofi/themes/menu.rasi -show ï„
    else
        echo "$@" >> $FILE
        cat ""
        cat $FILE
        #echo "$@"
    fi
fi
